@using Ecommerce.Models.ViewModel
@using PagedList.Mvc;
@model PagedList.IPagedList<HienThiSanPham>

@{
    ViewBag.Title = "Giá Cao đến Thấp";
    Layout = "~/Areas/Customers/Views/Shared/_LayoutDetails.cshtml";
}


<div class="shop_area shop_fullwidth">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <!-- Phần lọc sản phẩm-->
                <div class="shop_toolbar_wrapper">
                    <div class="shop_toolbar_btn">
                        <button data-role="grid_4" type="button" class=" active btn-grid-4" data-toggle="tooltip" title="4"></button>
                        <button data-role="grid_list" type="button" class="btn-list" data-toggle="tooltip" title="List"></button>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-danger dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                            Bộ lọc
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            <li><a class="dropdown-item" href="~/Customers/SapXep/CaoDenThap">Giá Cao - Thấp</a></li>
                            <li><a class="dropdown-item" href="~/Customers/SapXep/ThapDenCao">Giá Thấp - Cao</a></li>
                            <li><a class="dropdown-item" href="~/Customers/SapXep/BanChay">Bán Chạy</a></li>
                            <li><a class="dropdown-item" href="~/Customers/SapXep/DienThoaiDuoi1Trieu">Dưới 1 Triệu</a></li>
                            <li><a class="dropdown-item" href="~/Customers/SapXep/DienThoaiTu3Den7Trieu">Từ 3 Triệu Đến 7 Triệu</a></li>
                            <li><a class="dropdown-item" href="~/Customers/SapXep/DienThoaiTu7Den10Trieu">Từ 7 Triệu Đến 10 Triệu</a></li>
                            <li><a class="dropdown-item" href="~/Customers/SapXep/DienThoaiTu10Den15Trieu">Từ 10 Triệu Đến 15 Triệu</a></li>
                            <li><a class="dropdown-item" href="~/Customers/SapXep/DienThoaiTu15Den20Trieu">Từ 15 Triệu Đến 20 Triệu</a></li>
                            <li><a class="dropdown-item" href="~/Customers/SapXep/DienThoaiTren20Trieu">Trên 20 Triệu</a></li>
                        </ul>
                    </div>
                </div>
                <!-- kết thúc lọc sản phẩm -->
                <!--shop wrapper start-->
                <div class="row no-gutters shop_wrapper">

                    @foreach (var item in Model)
                    {
                        <div class="col-lg-3 col-md-4 col-12 ">
                            <article class="single_product">
                                <figure>
                                    <div class="product_thumb">
                                        <a class="primary_img" href="~/Customers/Home/XemChiTiet?masanpham=@item.iMaSanPham"><img src="/Assets/Customers/img/HinhAnhSanPham/@item.sAnhBia" alt=""></a>
                                        <a class="secondary_img" href="~/Customers/Home/XemChiTiet?masanpham=@item.iMaSanPham"><img src="/Assets/Customers/img/HinhAnhSanPham/@item.sAnhBia" alt=""></a>
                                        <div class="label_product">
                                        </div>
                                    </div>
                                    <div class="product_content grid_content">
                                        <div class="product_content_inner">
                                            <h4 class="product_name"><a href="~/Customers/Home/XemChiTiet?masanpham=@item.iMaSanPham">@item.sTenSanPham @item.sTenMauSac - @item.iRom/@item.iRam</a></h4>
                                            <div class="price_box">
                                                <span class="old_price">@item.dGiaGoc</span>
                                                <span class="current_price">@String.Format("{0:0,0}", item.dGiaBan) vnđ</span>
                                            </div>
                                        </div>
                                        <div class="add_to_cart">
                                            <a href="~/Customers/Home/XemChiTiet?masanpham=@item.iMaSanPham" title="Chi Tiết Sản Phẩm">Chi Tiết Sản Phẩm</a>
                                        </div>
                                    </div>
                                    <div class="product_content list_content">
                                        <h4 class="product_name"><a href="~/Customers/Home/XemChiTiet?masanpham=@item.iMaSanPham">@item.sTenSanPham @item.sTenMauSac - @item.iRom/@item.iRam</a></h4>
                                        <div class="price_box">
                                            <span class="current_price">@string.Format("{0:0,0}", item.dGiaBan) vnđ</span>
                                        </div>
                                        <div class="product_desc">
                                            <p>@item.sMoTa</p>
                                        </div>
                                        <div class="add_to_cart">
                                            <a href="~/Customers/Home/XemChiTiet?masanpham=@item.iMaSanPham" title="Chi Tiết Sản Phẩm">Chi Tiết Sản Phẩm</a>
                                        </div>
                                    </div>
                                </figure>
                            </article>
                        </div>
                    }
                    <!-- #region Phân Trang -->
                    <div class="shop_toolbar t_bottom">
                        <div class="pagination">
                            @Html.PagedListPager(Model, page => Url.Action("CaoDenThap", "SapXep", new { page }))
                        </div>
                    </div>
                    <!-- #endregion -->
                </div>
            </div>
        </div>
    </div>
</div>