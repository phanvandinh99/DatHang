@using Ecommerce.Models.ViewModel
@using PagedList.Mvc;
@model PagedList.IPagedList<HienThiSanPham>
@{
    ViewBag.Title = "Kết Quả Tìm Kiếm";
    Layout = "~/Areas/Customers/Views/Shared/_LayoutDetails.cshtml";
}

<div class="shop_area shop_fullwidth">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <!-- Phần lọc sản phẩm-->
                <div class="shop_toolbar_wrapper">
                    <div class="shop_toolbar_btn">
                        <button data-role="grid_4" type="button" class=" active btn-grid-4" data-toggle="tooltip" title="4"></button>
                        <button data-role="grid_list" type="button" class="btn-list" data-toggle="tooltip" title="List"></button>
                    </div>
                    <div class="dropdown">
                        @if (ViewBag.MaHangSX == 1)
                        {
                            <button class="btn btn-danger dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                Sắp xếp điện thoại Samsung
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                <li><a class="dropdown-item" href="~/Customers/SapXep/SSCaoDenThap">Giá Cao - Thấp</a></li>
                                <li><a class="dropdown-item" href="~/Customers/SapXep/SSThapDenCao">Giá Thấp - Cao</a></li>
                                <li><a class="dropdown-item" href="~/Customers/SapXep/SSBanChay">Bán Chạy</a></li>
                            </ul>
                        }

                    </div>
                </div>
                <!-- kết thúc lọc sản phẩm -->
                <!--Hiển thị sản phẩm-->
                <div class="row no-gutters shop_wrapper">

                    @foreach (var item in Model)
                    {
                        <div class="col-lg-3 col-md-4 col-12 ">
                            <article class="single_product">
                                <figure>
                                    <div class="product_thumb">
                                        <a class="primary_img" href="~/Customers/Home/XemChiTiet?masanpham=@item.iMaSanPham"><img src="/Assets/Customers/img/HinhAnhSanPham/@item.sAnhBia" alt=""></a>
                                        <a class="secondary_img" href="~/Customers/Home/XemChiTiet?masanpham=@item.iMaSanPham"><img src="/Assets/Customers/img/HinhAnhSanPham/@item.sAnhBia" alt=""></a>
                                        <div class="label_product">
                                            <span class="label_sale">Sale</span>
                                        </div>
                                        <div class="action_links">
                                            <ul>
                                                <li class="wishlist"><a href="wishlist.html" data-tippy-placement="top" data-tippy-arrow="true" data-tippy-inertia="true" data-tippy="Thêm vào list yêu thích"><i class="ion-android-favorite-outline"></i></a></li>
                                                <li class="compare"><a href="#" data-tippy-placement="top" data-tippy-arrow="true" data-tippy-inertia="true" data-tippy="Xem nhanh"><i class="ion-ios-settings-strong"></i></a></li>
                                                <li class="quick_button"><a href="#" data-tippy-placement="top" data-tippy-arrow="true" data-tippy-inertia="true" data-bs-toggle="modal" data-bs-target="#modal_box" data-tippy="SP liên quan"><i class="ion-ios-search-strong"></i></a></li>
                                            </ul>
                                        </div>
                                    </div>

                                    <div class="product_content grid_content">
                                        <div class="product_content_inner">
                                            <h4 class="product_name"><a href="~/Customers/Home/XemChiTiet?masanpham=@item.iMaSanPham">@item.sTenSanPham</a></h4>
                                            <div class="price_box">
                                                <span class="old_price">@item.dGiaGoc</span>
                                                <span class="current_price">@String.Format("{0:0,0}", item.dGiaBan) vnđ</span>
                                            </div>
                                        </div>
                                        <div class="add_to_cart">
                                            <a href="~/Customers/Home/XemChiTiet?masanpham=@item.iMaSanPham" title="Chi Tiết Sản Phẩm">Chi Tiết Sản Phẩm</a>
                                        </div>
                                    </div>
                                    <div class="product_content list_content">
                                        <h4 class="product_name"><a href="~/Customers/Home/XemChiTiet?masanpham=@item.iMaSanPham">@item.sTenSanPham</a></h4>
                                        <div class="price_box">
                                            <span class="current_price">@string.Format("{0:0,0}", item.dGiaBan) vnđ</span>
                                        </div>
                                        <div class="product_desc">
                                            <p>@item.sMoTa</p>
                                        </div>
                                        <div class="add_to_cart">
                                            <a href="~/Customers/Home/XemChiTiet?masanpham=@item.iMaSanPham" title="Chi Tiết Sản Phẩm">Chi Tiết Sản Phẩm</a>
                                        </div>
                                    </div>
                                </figure>
                            </article>
                        </div>
                    }
                    <div class="shop_toolbar t_bottom">
                        <div class="pagination">
                            @Html.PagedListPager(Model, page => Url.Action("TimKiem", "TimKiem", new { @sTuKhoa = ViewBag.tukhoa, page }))
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>