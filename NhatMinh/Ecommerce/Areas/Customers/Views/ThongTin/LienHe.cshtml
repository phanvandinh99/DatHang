@{
    ViewBag.Title = "Liên Hệ";
    Layout = "~/Areas/Customers/Views/Shared/_LayoutDetails.cshtml";
}

<div class="contact_page_bg">
    <!--contact map start-->
    <!--contact map end-->
    <div class="container">
        <!--contact area start-->
        <div class="contact_area">
            <div class="row">
                <div class="col-lg-6 col-md-12">
                    <div class="contact_message content">
                        <h3>Liên Hệ / Đóng góp Ý Kiến / Hợp Tác Với Chúng Tôi</h3>
                        <p style="text-align:center">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d4437055.449166773!2d104.73929139862032!3d21.288179127011926!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1svi!2s!4v1628850020222!5m2!1svi!2s" height="300" style="border:0;" allowfullscreen="" loading="eager"></iframe>

                        </p>

                        <p>
                            Mọi thắc mắc hoặc góp ý, quý khách vui lòng liên hệ trực tiếp với bộ phận chăm sóc 
                            khách hàng bên dưới hoặc điền đầy đủ thông tin vào form cạnh bên.
                        </p>
                        <ul>
                            <li><i class="fa fa-fax"></i> Địa Chỉ : Hà Nội.</li>
                            <li><i class="fa fa-phone"></i> <a href="#"> CSKHViettelStore@gmail.com</a></li>
                            <li><i class="fa fa-envelope-o"></i> 0934519005</li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12">
                    <div class="contact_message form">
                        <h3>Nhập thông Tin Đầy Đủ vào Form</h3>
                        <form id="contact-form" method="POST" action="">
                        @*<form id="contact-form" method="POST" action="https://htmldemo.hasthemes.com/antomi/antomi/assets/mail.php">*@
                            <p>
                                <label> Họ Và Tên</label>
                                <input name="name" placeholder="Họ và tên *" type="text">
                            </p>
                            <p>
                                <label> Số Điện Thoại</label>
                                <input name="email" placeholder="sdt" type="text">
                            </p>
                            <p>
                                <label> Subject</label>
                                <input name="email" placeholder="Subject *" type="email">
                            </p>
                            <div class="contact_textarea">
                                <label> Nội Dung</label>
                                <textarea placeholder="Nhập nội dung *" name="message" class="form-control2"></textarea>
                            </div>
                            <button type="submit"> Gửi</button>
                            <p class="form-messege"></p>
                        </form>

                    </div>
                </div>
            </div>
        </div>
        <!--contact area end-->
    </div>
</div>

